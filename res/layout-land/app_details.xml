<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RelativeLayout android:layout_width="200dp"
		android:layout_height="fill_parent">
		<ImageView android:id="@+id/icon" android:layout_width="48dp"
			android:layout_height="48dp" android:layout_margin="10dp"
			android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
			android:src="@drawable/blank_icon" />
		<TextView android:id="@+id/label" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_below="@id/icon"
			android:layout_alignParentLeft="true" android:textAppearance="?android:attr/textAppearanceLarge"
			android:paddingLeft="6dip" />
	</RelativeLayout>
	<View android:layout_width="1dp" android:layout_height="fill_parent"
		android:background="@drawable/vline" android:padding="0dp"
		android:layout_margin="5dp" />
	<ListView android:id="@android:id/list" android:layout_width="0dp"
		android:layout_height="fill_parent" android:layout_weight="1" />
</LinearLayout>
